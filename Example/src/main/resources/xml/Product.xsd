<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://sportshop.com/product"
            elementFormDefault="qualified" xmlns="http://sportshop.com/product">

    <xsd:element name="product" type="Product"/>

    <xsd:complexType name="Product">
        <xsd:sequence>
            <xsd:element name="description" type="xsd:string" />
            <xsd:element name="name" type="xsd:string" />
            <xsd:element name="supply_date" type="xsd:date" />
            <xsd:element name="price" type="xsd:unsignedShort" />
            <xsd:element name="item_weigth" type="xsd:decimal" />
            <xsd:element name="model_year" type="xsd:unsignedShort" />
            <xsd:element name="size" type="xsd:string" />
            <xsd:element name="color" type="xsd:string" />
            <xsd:element name="rating" type="xsd:decimal" />
        </xsd:sequence>
        <xsd:attribute name="id" type="xsd:unsignedByte" use="required" />
    </xsd:complexType>

</xsd:schema>