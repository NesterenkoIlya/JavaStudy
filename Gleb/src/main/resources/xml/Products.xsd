<xsd:schema elementFormDefault="qualified"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://sportshop/products" xmlns:tns="http://sportshop/product" xmlns="http://sportshop/products">
    <xsd:import namespace="http://sportshop/product" schemaLocation="Product.xsd"/>

    <xsd:element name="products">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="product" type="tns:Product" maxOccurs="unbounded" minOccurs="0"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
</xsd:schema>